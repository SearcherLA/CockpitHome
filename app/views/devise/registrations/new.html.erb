<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>Cockpit</b>Home</a>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">Bitte registrieren Sie sich</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        <span class="fa fa-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> Zeichen minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="actions">
            <%= f.submit "Registrieren", :class => "btn btn-primary btn-block btn-flat" %>
          </div>
        </div>
      </div>
    <% end %>

    <br>
  </div>
</div>
