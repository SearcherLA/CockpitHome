<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>Cockpit</b>Home</a>
  </div>
  <!-- /.login-logo -->

  <div class="login-box-body">
    <p class="login-box-msg">Bitte melden Sie sich zuerst an</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        <span class="fa fa-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <!-- /.col -->
        <div class="col-xs-12">
          <%= f.submit "Anmelden", :class => "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <br>
    <%= link_to 'Registrieren', new_registration_path(resource_name), :class => 'text-center' %>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
