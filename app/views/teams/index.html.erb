<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Stammdaten
    <small>Teams</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to static_dashboard_path do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">
      <%= link_to teams_path do %>
        <i class="fa fa-users"></i> Teams
      <% end %>
    </li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-lg-6 col-xs-12 col-lg-offset-3">
      <div class="box box-primary">
        <div class="box-header">
          <span class="fa fa-users"></span><h3 class="box-title">Teams Übersicht</h3>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th>ID</th>
                <th>Teamname</th>
                <th>Abkürzung</th>
              </tr>
              <% @teams.each do |team| %>
                <tr>
                  <td><%= team.id %></td>
                  <td><%= team.teamname %></td>
                  <td>
                    <%= team.shortcut %>
                    <div class="todo-list tools pull-right">
                      <%= link_to edit_team_path(team) do %>
                        <span class="label label-primary"><i class="fa fa-edit"></i></span>
                      <% end %>
                      <%= link_to team, method: :delete, data: { confirm: 'Sind Sie sicher?' } do %>
                        <span class="label label-danger"><i class="fa fa-trash-o"></i></span>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="box-footer clearfix">
          <%= link_to 'Neues Team', new_team_path, :class => 'btn btn-success btn-flat btn-sm' %>
        </div>
      </div>
    </div>
  </div>
</section>
