<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Stammdaten
    <small>Teams</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to static_dashboard_path do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">
      <%= link_to teams_path do %>
        <i class="fa fa-users"></i> Teams
      <% end %>
    </li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-lg-6 col-xs-12 col-lg-offset-3">
      <div class="box box-primary">
        <div class="box-header">
          <span class="fa fa-users"></span><h3 class="box-title">Teams Ãœbersicht</h3>
        </div>
        <div class="box-body">
          <ul class="todo-list">
            <li>
              <span class="text">Teamname</span>
              <div class="tools">
                <i class="fa fa-edit"></i>
                <i class="fa fa-trash-o"></i>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<table>
  <thead>
    <tr>
      <th>Teamname</th>
      <th>Shortcut</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.teamname %></td>
        <td><%= team.shortcut %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

