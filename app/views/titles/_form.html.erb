<%= form_with(model: title, local: true) do |form| %>
  <% if title.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(title.errors.count, "error") %> prohibited this title from being saved:</h2>

      <ul>
      <% title.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br/>
  <div class="col-xs-12 col-lg-12">
    <div class="form-group">
      <%= form.label :title, "Titel" %><br />
      <%= form.text_field :title, id: :title_title, class: "form-control", autofocus: true %>
    </div>
    <div class="actions">
      <%= link_to 'Abbrechen', :back, :class => 'btn btn-danger btn-flat btn-sm pull-left' %>
      <%= form.submit 'Speichern', :class => "btn btn-success btn-flat btn-sm pull-right" %>
    </div>
    <br/>
  </div>
<% end %>
